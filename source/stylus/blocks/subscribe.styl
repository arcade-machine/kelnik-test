.subscribe
  padding 45px 54px
  display flex
  border-radius 5px
  background-color #046380

.subscribe__wrapper
  margin-right 180px

.subscribe__header
  padding 0
  margin 0
  margin-bottom 10px
  font-family "OpenSans SemiBold", "Open Sans", serif
  font-size 34px
  color #ffffff

.subscribe__info
  padding 0
  margin 0
  font-family "OpenSans Bold", "Open Sans", serif
  font-size 18px
  color #ffffff

.subscribe__email
  width 50%
  padding-top 10px
  display flex
  justify-content space-between
  flex-wrap wrap

.subscribe__input
  width 54%
  min-height 47px
  padding 0 15px
  box-sizing border-box
  font-family "OpenSans Regular", "Open Sans", serif
  font-size 16px
  color #046380

  &:placeholder
    color #046380

.subscribe__button
  width 36%
  font-family "OpenSans Regular", "Open Sans", serif
  font-size 16px
  letter-spacing 0.06em
  text-transform uppercase
  color #ffffff
  border none
  background-color #a7a37e
  cursor pointer

.subscribe__news
  padding-top 15px
  margin 0
  display flex
  align-items center
  font-family "OpenSans Regular", "Open Sans", serif
  font-size 18px
  color #ffffff

.subscribe__checkbox
  width 18px
  height 18px
  margin-right 10px
  border-radius 3px
  background-color #ffffff
  position relative
  order -1

#userNewsletter:checked ~ .subscribe__checkbox::after
  content ""
  width 18px
  height 18px
  background-image url("../img/checkbox.svg")
  background-repeat no-repeat
  background-size cover
  position absolute
  top 1px
  left 1px

